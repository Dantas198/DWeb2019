extends layout
block content
    .w3-container
        .w3-card-4
            h1 Arquivo Sonoro de Ernesto Valverde
                .w3-card-4
                    header.w3-container
                        h3 Nova Música
                           include form
            .w3-card-4
                header.w3-container
                    table.w3-table-all
                        tr  
                            th Título
                            th Província
                            th Local
                            th Musico
                        each m in lista
                            tr  
                                td= m.tit
                                td= m.prov
                                td= m.local
                                td= m.musico
                                td
                                    button.w3-button.w3-circle.w3-blue-grey(onclick="apagarMusica('" + m.id +"')") Apagar
                                td
                                    a(class='button' href='/editar/' + m.id) Editar
            footer.w3-container.w3-teal
