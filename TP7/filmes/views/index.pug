extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container
                h1 Base de dados de filmes americanos
            .w3-container
                ul.w3-ul
                    li
                        a(class='w3-button' href='/filmes/addform') Adicionar um Filme
            .w3-container
                ul.w3-ul
                    each f in lista
                            li  
                                a(href= 'filmes/' + f.id)= f.title               
                footer.w3-container.w3-teal
            .w3-container
                if(page > 0)
                    a(href="/filmes/?page=" + page+1) Previous
                if(page != limit){
                    a(href="/filmes/?page=" + page-1) Next
                    a(href="/filmes/?page=" + limit) Go to the end 
                    }
