extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container
                h1 Entidades
                .w3-container
                table.w3-table-all
                    tr  
                        th Sigla
                        th Estado
                        th Operações
                    each e in entidades
                        tr 
                            td= e.sigla
                            td= e.estado 
                            td
                                a(class='w3-button' href='/entidades/' + e.id) Details
                                       