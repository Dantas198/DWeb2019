extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container
                h1 Laureados
                table.w3-table-all
                            tr  
                                th Nome
                                th Ano
                                th Categoria
                            each l in lista
                                tr  
                                    td= l.firstname + ' ' + l.surname
                                    td= l.prize[0].year
                                    td= l.prize[0].category
                                if(l.prize.length > 1)
                                    each p,i in l.prize
                                        if(i > 0)
                                            tr
                                                td= '-'
                                                td= p.year 
                                                td= p.category