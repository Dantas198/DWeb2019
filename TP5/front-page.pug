extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container
                h3 Gestor de Tarefas
            .w3-container
                form.w3-container(action='/tarefa' method='POST')
                    label.w3-blue-grey
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label.w3-blue-grey
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type='date' name='data_limite')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            .w3-container
                .w3-container
                    input.w3-btn.w3-blue-grey(type='button' value='Apagar tarefas expiradas' onclick='apagarVelhas()')
            header.w3-container
                h4 Tarefas
            .w3-container
                .w3-card-4
                    header.w3-container
                        table.w3-table-all
                            tr
                                th Nome
                                th Data Limite
                                th Tempo Restante
                            each t in lista
                                tr
                                    td= t.nome
                                    td= t.data_limite
                                    td= t.tempo_restante
                footer.w3-container.w3-teal
            